@page "/"

<PageTitle>Index</PageTitle>


<div class="text-center">
    <h1 class="display-4">A sample of Clean Architecture</h1>


    <h2 class="my-3">Northwind's Employee List by Country</h2>

    @if (Employees != null)
    {
        <table class="table">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Country</th>
            </tr>
            @foreach (var emp in Employees)
            {
                <tr>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>@emp.Country</td>
                </tr>
            }
        </table>
        
            <input type="text" @bind-value="@Country" />
            <button class="btn btn-primary" @onclick="FilterEmployees">Filter</button>
    
    }
    else
    {
        <p>Loading...</p>
    }

</div>

